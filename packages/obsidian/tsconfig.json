{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2019", "dom"],
    "types": ["cypress", "@types/node"],
    "inlineSourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "exclude": ["framework/tests/**", "framework/packages/obcli/**"],
  "include": ["**/*.ts", "cypress/**/*.ts", "obsidian"],
  "typeRoots": ["./node_modules/@types", "cypress", "obsidian"]
}
